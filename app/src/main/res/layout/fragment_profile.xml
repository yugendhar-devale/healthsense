<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <include layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_below="@+id/toolbar"
        android:fadeScrollbars="false"
        android:scrollbarFadeDuration="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="100dp">

                            <co.curesense.tb.customfonts.MyTextView_Roboto_Medium
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="11.7dp"
                                android:text="All your personal data"
                                android:textColor="#34353d"
                                android:textSize="15sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="11.7dp"
                                android:layout_marginRight="11.7dp"
                                android:layout_marginBottom="6dp"
                                android:background="@drawable/pich_rect"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:id="@+id/phy"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="11.7dp">

                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/data" />


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15.7dp"
                                        android:orientation="vertical">


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="4dp"
                                            android:orientation="horizontal">

                                            <co.curesense.tb.customfonts.TextViewSFProDisplayRegular
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="Physical Paramters"
                                                android:textColor="#34353d"
                                                android:textSize="16sp" />


                                            <ImageView
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:layout_marginTop="10dp"
                                                android:src="@drawable/next" />

                                        </LinearLayout>


                                        <co.curesense.tb.customfonts.TextViewSFProDisplayRegular
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Height, Weight, BMI etc. Click to edit."
                                            android:textColor="#878787"
                                            android:textSize="14.7dp" />


                                    </LinearLayout>


                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="#e0d8d8" />

                                <LinearLayout
                                    android:id="@+id/habits"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="11.7dp">

                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/sketchbook" />


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15.7dp"
                                        android:layout_marginBottom="4dp"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">


                                            <co.curesense.tb.customfonts.TextViewSFProDisplayRegular
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="Your Habits"
                                                android:textColor="#34353d"
                                                android:textSize="16sp" />


                                            <ImageView
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:layout_marginTop="10dp"
                                                android:src="@drawable/next" />
                                        </LinearLayout>


                                        <co.curesense.tb.customfonts.TextViewSFProDisplayRegular
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="All the info about your routine and habits saved here. Click to edit. "
                                            android:textColor="#878787"
                                            android:textSize="14.7dp" />


                                    </LinearLayout>


                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="#e0d8d8" />

                                <LinearLayout
                                    android:id="@+id/others"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="11.7dp">

                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/message" />


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15.7dp"
                                        android:layout_marginBottom="4dp"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">


                                            <co.curesense.tb.customfonts.TextViewSFProDisplayRegular
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="Other Information"
                                                android:textColor="#34353d"
                                                android:textSize="16sp" />


                                            <ImageView
                                                android:layout_width="15dp"
                                                android:layout_height="15dp"
                                                android:layout_marginTop="10dp"
                                                android:src="@drawable/next" />
                                        </LinearLayout>


                                        <co.curesense.tb.customfonts.TextViewSFProDisplayRegular
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Your generic data like DoB, contact details etc are here. Click to edit."
                                            android:textColor="#878787"
                                            android:textSize="14.7dp" />


                                    </LinearLayout>


                                </LinearLayout>


                            </LinearLayout>

                            <co.curesense.tb.customfonts.TextViewSFProDisplayRegular
                                android:id="@+id/some_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="11.7dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginRight="11.7dp"
                                android:letterSpacing="0.00775"
                                android:maxLines="3"
                                android:text="Please keep this data updated for more accurate screening of disease. This information is used by our AI algorithms during screening report generation."
                                android:textColor="#5f6271"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <co.curesense.tb.customfonts.MyTextView_Roboto_Medium
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.3dp"
                android:layout_weight="1"
                android:background="@drawable/sign_up"
                android:gravity="center"
                android:paddingLeft="27.7dp"
                android:paddingTop="11.7dp"
                android:paddingRight="27.7dp"
                android:paddingBottom="11.7dp"
                android:text="Request Deletion"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
